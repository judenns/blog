{
    "name": "blog-monorepo",
    "private": true,
    "scripts": {
        "dev": "pnpm --filter frontend dev",
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:cms": "pnpm --filter cms dev",
        "dev:all": "pnpm --parallel --filter './packages/*' dev",
        "build": "pnpm --filter frontend build",
        "build:frontend": "pnpm --filter frontend build",
        "format": "biome format --write . && prettier --write \"**/*.{html,css}\"",
        "format:check": "biome format . && prettier --check \"**/*.{html,css}\"",
        "lint": "biome check .",
        "lint:fix": "biome check --write ."
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.0",
        "prettier": "^3.7.4"
    },
    "dependencies": {
        "@payloadcms/richtext-lexical": "3.69.0",
        "mongodb": "^7.0.0"
    }
}
